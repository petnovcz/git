@model IEnumerable<FloorballTrainingSessions.Seasons>

@{
    ViewBag.Title = "Nastavení sezón";
}

<div class="well">
    <h1>Nastavení sezón</h1>
</div>

<p>
    @Html.ActionLink("Vytvoření nové sezóny", "Create", "Seasons", null, new { @class = "btn btn-success btn-md" })
    @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-md" })
</p>
<div class="well well-lg">
    <div class="table-responsive">
        <table class="table">
            <colgroup>
                <col class="col-md-7" />
                <col class="col-md-3" />
                <col class="col-md-2" />
            </colgroup>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SeasonName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActiveSeason)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeasonName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActiveSeason)
                        </td>
                        <td>
                            @Html.ActionLink("Edituj", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-md" })
                            @Html.ActionLink("Smaž", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-md" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>