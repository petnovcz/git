@model FloorballTrainingSessions.Teams

@{
    ViewBag.Title = "Delete";
}

<div class="well">
    <h1>Nastavení týmů</h1>
</div>

<div class="alert alert-danger">
    <span class="glyphicon glyphicon-exclamation-sign"></span> Opravdu chcete smazat tento záznam?<span class="glyphicon glyphicon-exclamation-sign"></span>
</div>

<div class="well well-lg">
    <h4>Smazání týmu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeamName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Smaž" class="btn btn-danger" />
            @Html.ActionLink("Zpět na seznam", "Index", "Teams", null, new { @class = "btn btn-primary btn-md"})
            @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-md" })
        </div>
    }
</div>
