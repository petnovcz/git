@model FloorballTrainingSessions.Seasons

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron">
    <h1>Nová sezóna</h1>
    <p class="lead">Formulář pro vytvoření nové sezóny v databázi. Nastavení aktivní sezóny určuje standardní náhledy na data.</p>

</div>

<div class="alert alert-danger">
    <span class="glyphicon glyphicon-exclamation-sign"></span> Opravdu chcete smazat tento záznam?<span class="glyphicon glyphicon-exclamation-sign"></span>
</div>
<div class="well well-lg">
    <h4>Sezóna</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SeasonName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SeasonName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActiveSeason)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActiveSeason)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Smaž" class="btn btn-danger btn-md" />
            @Html.ActionLink("Zpět na seznam", "Index", "Seasons", null, new { @class = "btn btn-primary btn-md" })
            @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-md" })
        </div>
    }
</div>
