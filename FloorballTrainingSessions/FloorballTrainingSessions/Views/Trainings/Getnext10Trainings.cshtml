@model IEnumerable<FloorballTrainingSessions.Trainings>


<div class="btn-group btn-group-justified" style="margin: 0 !important; padding:0 !important;">
    @foreach (var item in Model)
    {

        <div class="btn-group" style="margin: 0 !important; padding:0 !important;">
            @Ajax.ActionLink(item.TrainingDate.ToShortDateString(), "Details",
                              "Trainings",
                              new { Id = item.Id },
                              new AjaxOptions
                              {
                                  HttpMethod = "GET",
                                  InsertionMode = InsertionMode.Replace,
                                  UpdateTargetId = "main-main",

                              },
                              new { @class = "btn" })
        </div>






    }

</div>

