@model IEnumerable<FloorballTrainingSessions.TrainingSchemeModels>

@{
    ViewBag.Title = "Index";
}
<div class="row well well-sm">
    <h1>Nastavení tréninkových schémat</h1>
</div>


<p>
    @Html.ActionLink(" ", "Create", "TrainingSchemeModels", null, new { @class= "btn btn-success btn-sm glyphicon glyphicon-plus" })
    @Html.ActionLink(" ", "Index", "Admin", null, new { @class = "btn btn-info btn-sm glyphicon glyphicon-home" })
</p>
<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <colgroup>
            <col class="col-md-5" />
            <col class="col-md-5" />
            <col class="col-md-2" />
        </colgroup>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TrainingSchemeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeasonParts.SeasonPartName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrainingSchemeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeasonParts.SeasonPartName)
                    </td>
                    
                    <td>
                        @Html.ActionLink(" ", "Edit", "TrainingSchemeModels", new { id = item.Id }, new { @class = "btn btn-warning btn-sm glyphicon glyphicon-edit" }) 
                        @Html.ActionLink(" ", "Details", "TrainingSchemeModels", new { id = item.Id }, new { @class = "btn btn-info btn-sm glyphicon glyphicon-cog" }) 
                        @Html.ActionLink(" ", "Delete", "TrainingSchemeModels", new { id = item.Id }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-trash" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>