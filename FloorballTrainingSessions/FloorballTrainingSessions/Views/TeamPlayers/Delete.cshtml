@model FloorballTrainingSessions.TeamPlayers

@{
    ViewBag.Title = "Delete";
}

<div class="well">
    <h1>Nastavení členů týmu</h1>
    <p>Tým:<b> @Html.Raw(ViewBag.SelectedTeamName)</b></p>
    <p>Sezóna:<b> @Html.Raw(ViewBag.SelectedSeasonName)</b></p>
</div>

<div class="alert alert-danger">
    <span class="glyphicon glyphicon-exclamation-sign"></span> Opravdu chcete smazat tento záznam?<span class="glyphicon glyphicon-exclamation-sign"></span>
</div>
<div>
    <h4>Smazání člena týmu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PlayerFunctions.PlayerFunctionName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlayerFunctions.PlayerFunctionName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Players.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Players.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seasons.SeasonName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seasons.SeasonName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teams.TeamName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teams.TeamName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-xs" /> 
            @Html.ActionLink("Zpět na seznam", "List", new { SeasonId = ViewBag.Season, TeamId = ViewBag.Team }, new { @class = "btn btn-primary btn-xs" })
        </div>
    }
</div>
