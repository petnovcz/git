@model IEnumerable<FloorballTrainingSessions.PlayerFunctions>

@{
    ViewBag.Title = "Index";
}

<div class="well">
    <h1>Nastavení funkcí</h1>
    
</div>

<p>
    @Html.ActionLink("Vytvoření nové funkce člena týmu", "Create", "PlayerFunctions", null, new { @class = "btn btn-success btn-xs"})
    @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-xs" })
</p>

<div class="table-responsive">
<table class="table table-condensed table-hover" >
    <colgroup>
        <col class="col-md-6">
        <col class="col-md-1">
        <col class="col-md-1">
        <col class="col-md-1">
        <col class="col-md-1">
        <col class="col-md-2">
    </colgroup>
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerFunctionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPlayer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsGoalie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsTrainer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsManager)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerFunctionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPlayer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsGoalie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsTrainer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsManager)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit","PlayerFunctions", new { id=item.Id }, new { @class = "btn btn-warning btn-xs"} )
            @Html.ActionLink("Delete", "Delete", "PlayerFunctions", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}
</tbody>
</table>
</div>
