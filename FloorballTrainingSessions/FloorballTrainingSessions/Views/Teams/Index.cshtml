@model IEnumerable<FloorballTrainingSessions.Teams>

@{
    ViewBag.Title = "Index";
}

<div class="well">
    <h1>Nastavení týmů</h1>
   </div>

<p>
    @Html.ActionLink("Vytvoření týmu", "Create", "Teams", null, new { @class = "btn btn-success btn-xs"})
    @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-xs" })
</p>


<div class="table-responsive">
<table class="table table-condensed table-hover">
<colgroup>
    <col class="col-md-10">
    <col class="col-md-2">
</colgroup>
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th></th>
    </tr>
</thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.ActionLink("Edituj", "Edit","Teams" , new { id = item.Id }, new { @class = "btn btn-warning btn-xs"}) 
                    
                    @Html.ActionLink("Smaž", "Delete", "Teams", new { id = item.Id }, new { @class = "btn btn-danger btn-xs"})
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
