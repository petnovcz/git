@model IEnumerable<FloorballTrainingSessions.TeamPlayers>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Nastavení členů k týmům</h1>
    <p class="lead">Nastavení členů k jednotlivým týmům.</p>


</div>

<p>
    @Html.ActionLink("Přidej hráče", "Create", "TeamPlayers", new { SelectedTeam = ViewBag.SelectedTeam, SelectedSeason = ViewBag.SelectedSeason }, new { @class = "btn btn-success btn-md"})
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerFunctions.PlayerFunctionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seasons.SeasonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teams.TeamName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerFunctions.PlayerFunctionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Players.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seasons.SeasonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teams.TeamName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerFunctions.PlayerFunctionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seasons.SeasonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teams.TeamName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerFunctions.PlayerFunctionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Players.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasons.SeasonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teams.TeamName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>