@model FloorballTrainingSessions.TeamPlayers

@{
    ViewBag.Title = "Add";
}

<div class="well">
    <h1>Nastavení členů týmu</h1>
    
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="well well-lg">
        <div class="form-horizontal">
            <h4>Vytvoření člena týmu</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.Team, "Team", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Team", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Team, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Player, "Player", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Player", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Player, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayerFunction, "PlayerFunction", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("PlayerFunction", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PlayerFunction, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Season, "Season", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Season", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Season, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success btn-xs" />
                    @Html.ActionLink("Zpět do administrace", "Index","Admin", new { SeasonId = ViewBag.SelectedSeason }, new { @class = "btn btn-info btn-xs" })
                </div>
            </div>
        </div>
        </div>
        }

        
