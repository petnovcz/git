@model FloorballTrainingSessions.TeamPlayers

@{
    ViewBag.Title = "Edit";
}

<div class="well">
    <h1>Nastavení členů týmu</h1>
    <p>Tým:<b> @Html.Raw(ViewBag.SelectedTeamName)</b></p>
    <p>Sezóna:<b> @Html.Raw(ViewBag.SelectedSeasonName)</b></p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="well well-lg">
        <div class="form-horizontal">
            <h4>TeamPlayers</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @Html.HiddenFor(model => model.Team, new { @Value = ViewBag.Team })
            @Html.HiddenFor(model => model.Season, new { @Value = ViewBag.Season })

            <div class="form-group">
                @Html.LabelFor(model => model.Player, "Player", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Player", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Player, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlayerFunction, "PlayerFunction", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("PlayerFunction", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PlayerFunction, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ulož" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "List", new { SeasonId = ViewBag.Season, TeamId = ViewBag.Team }, new { @class = "btn btn-primary btn-md" })
                </div>
            </div>
        </div>
    </div>
        }

        <div>
            
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
