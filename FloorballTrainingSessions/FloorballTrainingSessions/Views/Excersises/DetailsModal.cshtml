@model FloorballTrainingSessions.Excersises

<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@Html.DisplayFor(model => model.ExcersiseName)</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal">
                <div id="showtext" class="form-group">
                    <div class="panel panel-default">
                        <div class="panel-body"><i>@Html.DisplayFor(model => model.ShortDescript)</i></div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-body">@Html.Raw(Model.Description)</div>
                    </div>
                    
                    
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <input type="button" value="Close" data-dismiss="modal" class="btn btn-danger" />
                </div>
            </div>

        </div>
    </div>

</div>





