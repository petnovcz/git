@model FloorballTrainingSessions.PlayerModel
@{
    ViewBag.Title = "Administrace";
}

<div class="well">
    <div style="float:right;">
        @foreach (var item in Model.Seasons)
    {
        if (Model.ActiveSeason.Id == item.Id)
        {
            @Html.ActionLink(item.SeasonName, "Index", "Player", new { SeasonId = item.Id }, new { @class = "btn btn-md btn-success" });
        }
        if (Model.ActiveSeason.Id != item.Id)
        {
            @Html.ActionLink(item.SeasonName, "Index", "Player", new { SeasonId = item.Id }, new { @class = "btn btn-md btn-default" });
        }
    }
</div>
    <div style="float:right;">
        @foreach (var item in Model.CurrentPlayerTeams)
        {
            if (Model.ActiveTeam.Id == item.Team)
            {
                @Html.ActionLink(item.Teams.TeamName, "Index", "Player", new { TeamId = item.Team }, new { @class = "btn btn-md btn-success" });
            }
            if (Model.ActiveTeam.Id != item.Team)
            {
                @Html.ActionLink(item.Teams.TeamName, "Index", "Player", new { TeamId = item.Team }, new { @class = "btn btn-md btn-default" });
            }
        }
    </div>
<h1>Administrace</h1>



