@model FloorballTrainingSessions.AdminModel
@{
    ViewBag.Title = "Administrace";
}

<div class="jumbotron">
    <h1>Administrace</h1>
    <p class="lead">Nastavení jednotlivých prvků aplikace správy tréninků.</p>
    
   
</div>
@foreach (var item in Model.Seasons)
{
        if (Model.ActiveSeason == item.Id)
        {
            @Html.ActionLink(item.SeasonName, "Index", "Admin", new { SeasonId = item.Id }, new { @class = "btn btn-md btn-success" });
    }
    if (Model.ActiveSeason != item.Id)
    {
        @Html.ActionLink(item.SeasonName, "Index", "Admin", new { SeasonId = item.Id }, new { @class = "btn btn-md btn-default" });
    }
}
<div class="adminmenu">
    <h3>Základní nastavení aplikace</h3> 
    <div class="well well-lg">   
            @Html.ActionLink("Nastavení rozdělení částí sezóny", "Index", "SeasonParts", null, new { @class = "btn btn-block btn-md btn-primary" })
            @Html.ActionLink("Nastavení funkcí členů týmu", "Index", "PlayerFunctions", null, new { @class = "btn btn-block btn-md btn-primary" })
            @Html.ActionLink("Nastavení týmů", "Index", "Teams", null, new { @class = "btn btn-block btn-md btn-primary" })
            @Html.ActionLink("Přehled registrovaných uživatelů", "Index", "AspNetUsers", null, new { @class = "btn btn-block btn-md btn-primary" })
            @Html.ActionLink("Nastavení členů a jejich uživatelských účtů", "Index", "Players", null, new { @class = "btn btn-block btn-md btn-primary" })
            @Html.ActionLink("Nastavení kategorií cvičení", "Index", "ExcersiseCategories", null, new { @class = "btn btn-block btn-md btn-primary" })
    </div>
    <h3>Předsezóní nastavení</h3>
    <div class="well well-lg">
        @Html.ActionLink("Sezóny", "Index", "Seasons", null, new { @class = "btn btn-block btn-md btn-primary" })
        @Html.ActionLink("Generate Trainings", "Index", "Seasons", null, new { @class = "btn btn-block btn-md btn-primary" })
        @Html.ActionLink("TeamPlayers", "Index", "TeamPlayers", null, new { @class = "btn btn-block btn-md btn-primary" })
        
    </div>
    <h3>Nastavení členů týmů</h3>
    <div class="well well-lg">
        
        @foreach (var item in Model.Teamplayers)
        {
                @Html.ActionLink(item.Teams.TeamName, "List", "TeamPlayers", new { TeamId = item.Team, SeasonId = Model.ActiveSeason }, new { @class = "btn btn-warning btn-block" });  
        }

    </div>
    <h3>Excersises</h3>
    <div class="well well-lg">
        @Html.ActionLink("Excersises", "Index", "Excersises", null, new { @class = "btn btn-block btn-md btn-primary" })
    </div>
</div>
