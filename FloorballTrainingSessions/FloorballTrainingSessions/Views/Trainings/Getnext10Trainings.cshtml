@model IEnumerable<FloorballTrainingSessions.Trainings>


<div class="btn-group btn-group-justified" style="margin-top: 10px !important; margin-bottom: 10px !important; padding:0 !important;">
    @foreach (var item in Model)
    {

        <div class="btn-group" style="margin: 0 !important; padding:0 !important;">
            @Ajax.ActionLink(item.TrainingDate.ToShortDateString(), "Details",
                              "Trainings",
                              new { Id = item.Id, View = "Player" },
                              new AjaxOptions
                              {
                                  HttpMethod = "GET",
                                  InsertionMode = InsertionMode.Replace,
                                  UpdateTargetId = "main-main",
                                  OnSuccess = "Showmainmain()"
                              },
                              new { @class = "btn btn-default" })
        </div>






    }
    <div class="btn-group" role="group">
        <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Dropdown
        </button>
        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
            <a class="dropdown-item" href="#">Dropdown link</a>
            <a class="dropdown-item" href="#">Dropdown link</a>
        </div>
    </div>
</div>

