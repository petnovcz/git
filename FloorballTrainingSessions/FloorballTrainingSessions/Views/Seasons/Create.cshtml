@model FloorballTrainingSessions.Seasons

@{
    ViewBag.Title = "Nová sezóna";
}


<div class="well">
    <h1>Nastavení sezón</h1>
   </div>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="well well-lg">
        <div class="form-horizontal">
            <h4>Sezóna</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.SeasonName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SeasonName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SeasonName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsActiveSeason, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActiveSeason)
                        @Html.ValidationMessageFor(model => model.IsActiveSeason, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Vytvoř" class="btn btn-success btn-xs " />
                    @Html.ActionLink("Zpět na seznam", "Index", "Seasons", null, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-xs" })
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
