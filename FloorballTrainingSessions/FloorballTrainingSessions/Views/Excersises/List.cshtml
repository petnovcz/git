
@{
    ViewBag.Title = "List";
}

<div class="row well well-sm">
    <h1>Přehled cvičení</h1>
</div>

@using (Ajax.BeginForm("GetExcersises", "Excersises", new AjaxOptions
{//GetPatients is name of method in PatientController
    InsertionMode = InsertionMode.Replace, //target element(#patientList) will be replaced
    UpdateTargetId = "ExcersisesList",
    LoadingElementId = "loader", // div with .gif loader - that is shown when data are loading

}))
{


    <div class="form-inline" style="display:block;overflow: visible !important; position: relative">
        <div class="form-group col-lg-3 col-md-3">

            @Html.DropDownList("excersisecategories", null, htmlAttributes: new { onchange = "$(this.form).submit();", @class = "selectpicker", @style = "width:100%", data_live_search = "true" })
        </div>
        <div class="form-group col-lg-3 col-md-3">
            @Html.DropDownList("seasonparts", null, htmlAttributes: new { onchange = "$(this.form).submit();", @class = "selectpicker", @style = "width:100%", data_live_search = "true" })
        </div>
        <div class="form-group col-lg-3 col-md-3">
            @Html.Editor("excersisename", new { htmlAttributes = new { onchange = "$(this.form).submit();", @class = "form-control" } })
        </div>
    </div>
    <div class="col-md-12" style="display:inline-block;margin-top:10px">
        @Html.ActionLink("Vytvoř nové cvičení", "Create", "Excersises", null, new { @class = "btn btn-success btn-xs btn-block" })
