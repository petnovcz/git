@model FloorballTrainingSessions.ExcersiseCategories

@{
    ViewBag.Title = "Create";
}

<div class="well">
    <h1>Kategorie cvičení</h1>

</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="well well-lg">
        <div class="form-horizontal">
            <h4>Vytvoření kategorie cvičení</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.ExcersiseCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ExcersiseCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ExcersiseCategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Vytvoř" class="btn btn-success btn-md" />
                    @Html.ActionLink("Zpět na seznam", "Index", "ExcersiseCategories", null, new { @class = "btn btn-primary btn-md" })
                    @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-md" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
