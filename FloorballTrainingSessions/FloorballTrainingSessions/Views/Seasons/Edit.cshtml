@model FloorballTrainingSessions.Seasons

@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron">
    <h1>Editace sezóny</h1>
    <p class="lead">Formulář pro editaci sezóny v databázi. Nastavení aktivní sezóny určuje standardní náhledy na data.</p>

</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="well well-lg">
        <div class="form-horizontal">
            <h4>Seasons</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.SeasonName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SeasonName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SeasonName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsActiveSeason, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActiveSeason)
                        @Html.ValidationMessageFor(model => model.IsActiveSeason, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ulož" class="btn btn-success btn-md" />
                    @Html.ActionLink("Zpět na seznam", "Index", "Seasons", null, new { @class = "btn btn-primary btn-md" })
                    @Html.ActionLink("Zpět do administrace", "Index", "Admin", null, new { @class = "btn btn-info btn-md" })
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
